{
  "name": "ionscript",
  "version": "0.2.8",
  "description": "Indented Javascript",
  "main": "lib/index.js",
  "browser": "docs/index.html",
  "repository": "https://github.com/glassorg/ionscript.git",
  "author": "Kris Nye <krisnye@gmail.com>",
  "license": "MIT",
  "bin": {
    "isc": "bin/isc.js"
  },
  "scripts": {
    "setup": "yarn install",
    "build": "guild build && yarn run buildGrammar",
    "buildAst": "ionc src/compiler/ast ionast",
    "watch": "./watch.sh",
    "test": "gtest lib # echo should be just guild test, todo: fix this",
    "watchGrammar": "nodemon -w src/compiler/parser.pegs -i src,lib -e pegs -x yarn run buildGrammar",
    "buildGrammar": "pegs src/compiler/parser.pegs lib/compiler/parser.js",
    "debug": "node --inspect-brk node_modules/@glas/test/gtest.js lib",
    "deploy": "yarn build && npm version patch --force && npm publish",
    "watch-website": "rm -rf .parcel-cache && parcel serve ./src/website/index.html --target browser",
    "build-website": "rm -rf .parcel-cache && parcel build ./src/website/index.html --target browser"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@glas/test": "^1.0.3",
    "@glas/traverse": "^1.0.4",
    "escodegen": "^2.0.0",
    "jsondiffpatch": "0.2.5",
    "pegs": "^0.1.6",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@glas/ion": "0.1.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "parcel": "^2.0.0-beta.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
